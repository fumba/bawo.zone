{
  "name": "bawo",
  "productName": "bawo",
  "description": "African Mancala game - Bawo, Bao, Omweso",
  "version": "1.0.0",
  "author": "Fumba Chibaka <fumba.me@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "http://bawo.zone",
  "main": "app/main.js",
  "engines": {
    "node": "16.3.0"
  },
  "build": {
    "appId": "zone.bawo",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev": "webpack serve --config=build/webpack.dev.config.js --mode=development",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --verbose --coverage",
    "start": "node build/start.js",
    "release": "yarn test -u && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "lint": "eslint src/**/*.ts --max-warnings=0; stylelint src/**/*.css",
    "simulate": "RANDOM_MOVES=false yarn ts-node src/js/Simulation.ts",
    "simulate:random": "RANDOM_MOVES=true yarn ts-node src/js/Simulation.ts",
    "docs": "yarn jsdoc -c jsdoc.config.json",
    "website": "ts-node build/website.ts"
  },
  "dependencies": {
    "@types/node": "^16.3.2",
    "better-docs": "^2.3.2",
    "fs-jetpack": "^4.1.0",
    "melonjs": "^8.0.1",
    "typescript": "^4.3.5",
    "yarn": "^1.22.10"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.171",
    "@types/regenerator-runtime": "^0.13.1",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "aws-sdk": "^2.948.0",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.1",
    "coveralls": "^3.1.1",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.1.0",
    "electron": "^13.1.7",
    "electron-builder": "^22.11.7",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsdoc": "^35.4.3",
    "eslint-plugin-prettier": "^3.4.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.0.6",
    "jest-canvas-mock": "^2.3.1",
    "jsdoc": "^3.6.7",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "path-browserify": "^1.0.1",
    "prettier": "^2.3.2",
    "queue-typescript": "^1.0.1",
    "source-map-support": "^0.5.6",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.1.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.1.0",
    "webpack": "^5.45.1",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
