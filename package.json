{
  "name": "bawo",
  "productName": "bawo",
  "description": "African Mancala game - Bawo, Bao, Omweso",
  "version": "1.0.0",
  "author": "Fumba Chibaka <fumba.me@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "http://bawo.zone",
  "main": "app/main.js",
  "engines": {
    "node": "16.3.0"
  },
  "build": {
    "appId": "zone.bawo",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev": "webpack serve --config=build/webpack.dev.config.js --mode=development",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --verbose --coverage",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "lint": "eslint src/**/*.ts --max-warnings=0; stylelint src/**/*.css",
    "docs": "yarn jsdoc -c jsdoc.config.json",
    "website": "ts-node build/website.ts"
  },
  "dependencies": {
    "@types/node": "^17.0.21",
    "better-docs": "^2.7.2",
    "fs-jetpack": "^4.3.1",
    "melonjs": "^8.0.1",
    "queue-typescript": "^1.0.1",
    "typescript": "^4.4.4",
    "yarn": "^1.22.17"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/preset-env": "^7.16.11",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.178",
    "@types/regenerator-runtime": "^0.13.1",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "aws-sdk": "^2.1079.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.2.4",
    "coveralls": "^3.1.1",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^6.6.0",
    "electron": "^17.0.1",
    "electron-builder": "^22.14.13",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.4.0",
    "eslint-plugin-jsdoc": "^37.9.4",
    "eslint-plugin-prettier": "^4.0.0",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.5.1",
    "jest-canvas-mock": "^2.3.1",
    "jsdoc": "^3.6.10",
    "node-polyfill-webpack-plugin": "^1.1.4",
    "path-browserify": "^1.0.1",
    "prettier": "^2.8.4",
    "source-map-support": "^0.5.21",
    "stream-browserify": "^3.0.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.5.3",
    "stylelint-config-standard": "^25.0.0",
    "ts-jest": "^27.1.3",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
