{
  "name": "bawo",
  "productName": "bawo",
  "description": "African Mancala game - Bawo, Bao, Omweso",
  "version": "1.0.0",
  "author": "Fumba Chibaka <fumba.me@gmail.com>",
  "license": "Apache-2.0",
  "homepage": "http://bawo.zone",
  "main": "app/main.js",
  "build": {
    "appId": "zone.bawo",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    },
    "publish": null
  },
  "scripts": {
    "dev": "webpack serve --config=build/webpack.dev.config.js --mode=development",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest --verbose",
    "start": "node build/start.js",
    "release": "yarn test -u && webpack --config=build/webpack.app.config.js --env=production && electron-builder",
    "lint": "eslint '*/**/*.{js,ts,tsx}' --fix; stylelint '**/*.css' --fix",
    "simulate": "yarn ts-node src/js/Simulation.ts"
  },
  "dependencies": {
    "fs-jetpack": "^4.1.0",
    "melonjs": "^8.0.1",
    "typescript": "^4.3.2"
  },
  "devDependencies": {
    "@babel/core": "^7.14.5",
    "@babel/preset-env": "^7.14.5",
    "@types/jest": "^26.0.23",
    "@types/lodash": "^4.14.170",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "babel-loader": "^8.2.2",
    "copy-webpack-plugin": "^9.0.0",
    "crypto-browserify": "^3.12.0",
    "css-loader": "^5.2.0",
    "electron": "^13.1.2",
    "electron-builder": "^22.5.1",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "html-webpack-plugin": "^5.3.1",
    "jest": "^27.0.4",
    "jest-canvas-mock": "^2.3.1",
    "lodash": "^4.17.21",
    "node-polyfill-webpack-plugin": "^1.1.2",
    "path-browserify": "^1.0.1",
    "prettier": "^2.3.1",
    "source-map-support": "^0.5.6",
    "stream-browserify": "^3.0.0",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "webpack": "^5.30.0",
    "webpack-cli": "^4.7.2",
    "webpack-dev-server": "^3.11.2",
    "webpack-merge": "^5.8.0",
    "webpack-node-externals": "^3.0.0"
  }
}
